<configuration>
    <!-- HDFS NameNode configuration -->
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>/home/hadoopcongdon/hadoop/hadoop_data/hdfs/namenode</value>
        <description>Directory for storing the HDFS NameNode metadata</description>
    </property>
    
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>/home/hadoopcongdon/hadoop/hadoop_data/hdfs/datanode</value>
